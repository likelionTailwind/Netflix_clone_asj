{
  "devDependencies": {
    "live-server": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "tailwind": "^4.0.0",
    "tailwindcss": "^3.2.4"
  },
  "scripts": {
    "dev": "run-p serve watch",
    "serve": "live-server src --host=localhost --port=3000 --no-browser",
    "compile": "tailwindcss -i src/css/tailwind.css -o src/css/style.css",
    "watch": "npm run compile -- --watch"
  }
}
